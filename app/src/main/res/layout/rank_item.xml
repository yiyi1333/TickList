<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/huawei_card">

    <TextView
        android:id="@+id/rank_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:text="1"
        android:textColor="@color/custom_black"
        android:textSize="26dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/rank_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/rank_number"
        app:shapeAppearanceOverlay="@style/circleImageStyle"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yiyi嘤嘤嘤"
        android:textSize="20dp"
        android:textColor="@color/custom_black"
        android:layout_toEndOf="@+id/rank_image"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/user_focus_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/focus_unit"
        android:text="45"
        android:textColor="@color/Mask_Green"/>

    <TextView
        android:id="@+id/focus_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:text="@string/minutes"
        android:textColor="@color/Mask_Green"/>


</RelativeLayout>